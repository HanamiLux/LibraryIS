<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:layout_margin="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bookTitle"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/russo_one"
                android:gravity="center"
                android:textColor="@color/mainHeader"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bookAuthor"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/russo_one"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/author"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:layout_margin="12dp"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bookGenre"
                    android:fontFamily="@font/russo_one"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"

                    />

                <CheckBox
                    android:id="@+id/isAvailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/russo_one"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_below="@id/genre"
                    android:layout_alignParentBottom="true"
                    android:text="@string/bookIsAvailable"
                    android:clickable="false"
                    />
                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/russo_one"
                    android:textSize="18sp"
                    android:layout_marginStart="4dp"
                    android:layout_below="@id/genre"
                    android:gravity="center"
                    android:layout_toEndOf="@id/isAvailable"
                    android:layout_alignParentBottom="true"
                    />
                <TextView
                    android:id="@+id/publishedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bookPublishedDate"
                    android:fontFamily="@font/russo_one"
                    android:textSize="14sp"
                    android:layout_below="@id/genre"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>